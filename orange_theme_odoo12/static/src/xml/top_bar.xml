<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="orange_theme_odoo12.MainNavBar" t-inherit="web.NavBar" t-inherit-mode="extension" owl="1">
        <xpath expr="//nav[hasclass('o_main_navbar')]" position="replace">
            <nav class="o_main_navbar" style="background-color:white; color:black;"
                 t-on-dropdown-item-selected="onNavBarDropdownItemSelection"
                 data-command-category="navbar">
                <div class="top_heading">

                    <!-- Toggle Sidebar Button -->
                    <a id="openSidebar" class="d-flex px-3 py-2" t-on-click="openSidebar" role="button">
                        <i class="fa fa-bars fa-lg"/>
                    </a>

                    <!-- App Brand -->
                    <DropdownItem
                            t-if="!env.isSmall and currentApp"
                            t-esc="currentApp.name"
                            class="'o_menu_brand d-flex'"
                            onSelected="() => this.onNavBarDropdownItemSelection(currentApp)"
                            attrs="{ href: getMenuItemHref(currentApp), 'data-menu-xmlid': currentApp.xmlid, 'data-section': currentApp.id }"
                    />
                </div>

                <!-- Current App Sections -->
                <t t-if="currentAppSections.length" t-call="web.NavBar.SectionsMenu">
                    <t t-set="sections" t-value="currentAppSections"/>
                </t>

                <!-- Systray -->
                <div class="o_menu_systray" role="menu">
                    <t t-foreach="systrayItems" t-as="item" t-key="item_index">
                        <ErrorHandler onError="error => handleItemError(error, item)">
                            <t t-component="item.Component" t-props="item.props"/>
                        </ErrorHandler>
                    </t>
                </div>
            </nav>

            <!-- Sidebar Panel with Search -->
            <div class="sidebar_panel" id="sidebar_panel">
                <div class="sidebar">
                    <div class="sidebar_close">
                        <a id="closeSidebar" style="cursor: pointer;"/>
                    </div>

                    <!-- Search Container -->
                    <div class="search-container form-row align-items-center m-auto mb-5 col-12"
                         style="padding-top: 32px;">
                        <div class="search-input col-md-10 ml-auto mr-auto mb-5">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-search"/>
                                    </div>
                                </div>
                                <input type="search"
                                       autocomplete="off"
                                       placeholder="Search menus..."
                                       class="form-control"
                                       t-on-input="_searchMenusSchedule"/>
                            </div>
                        </div>
                        <!-- Search Results -->
                        <div class="search-results col-md-10 ml-auto mr-auto">
                        </div>
                    </div>

                    <!-- Apps Menu -->
                    <h6 class="sidebar_head">MENU</h6>
                    <div class="sidebar_menu" style="padding-left:20px;">
                        <t t-foreach="menuService.getApps()" t-as="app" t-key="app_index">
                            <a role="menuitem"
                               t-attf-href="#menu_id={{app.id}}"
                               class="dropdown-item o_app mt0"
                               t-att-data-menu-id="app.id"
                               t-att-data-menu-xmlid="app.xmlID"
                               t-att-data-action-id="app.actionID"
                               t-on-click="() => this._onAppClick(app)">
                                <t t-if="app.webIconData">
                                    <img t-if="app.webIconData.startsWith('data:image/png')"
                                         t-att-title="app.name"
                                         t-att-src="app.webIconData"
                                         style="width: 40px !important; height: 40px !important;
                                                border-radius: 10px !important; margin: 10px 10px 10px 10px;"/>
                                    <img t-elif="app.webIconData.startsWith('data:image/svg')"
                                         t-att-src="app.webIconData"
                                         t-att-title="app.name"
                                         style="width: 40px !important; height: 40px !important;
                                                border-radius: 10px !important; margin: 10px 10px 10px 10px;"/>
                                    <div t-else="" class="o_app_icon" t-att-data-icon="app.webIconData"/>
                                </t>
                                <img t-else=""
                                     t-att-src="'/orange_theme_odoo12/static/src/img/hw_drivers.png'"
                                     t-att-title="app.name"
                                     style="width: 40px !important; height: 40px !important;
                                            border-radius: 10px !important; margin: 10px 10px 10px 10px;"/>
                                <b class="a_app_menu_title"><t t-esc="app.name"/></b>
                            </a>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </t>


    <t t-name="orange_theme_odoo12.AppsMenu" t-inherit="web.NavBar.AppsMenu" t-inherit-mode="extension" owl="1">
        <xpath expr="//Dropdown" position="replace">
            <li class="dropdown">
                <a id="openSidebar" style="display: block; cursor: pointer; padding-right: 10px;"
                   t-on-click="openSidebar">
                    <i class="fa fa-bars fa-lg"/>
                </a>
                <a id="closeSidebar" style="display: none; cursor: pointer;" t-on-click="closeSidebar">
                    <i class="fa fa-bars fa-lg"/>
                </a>
            </li>
        </xpath>
    </t>

    <t t-name="orange_theme_odoo12.SearchResults">
        <t t-foreach="results" t-as="result">
            <div class="search_icons">
                <a t-attf-class="o-menu-search-result dropdown-item col-12 ml-auto mr-auto #{result_first ? 'active' : ''}"
                   t-attf-href="#menu_id=#{result.id}&amp;action_id=#{result.actionID}"
                   t-att-data-menu-id="result.id"
                   t-att-data-action-id="result.actionID"
                   role="menuitem">
                    <div class="app-icon">
                        <t t-if="result.webIconData">
                            <img t-if="result.webIconData.startsWith('data:image/png')"
                                 t-att-src="result.webIconData"
                                 t-att-alt="result.name"/>
                            <img t-elif="result.webIconData.startsWith('data:image/svg')"
                                 t-att-src="result.webIconData"
                                 t-att-alt="result.name"/>
                            <div t-else="" class="o_app_icon" t-att-data-icon="result.webIconData"/>
                        </t>
                        <span t-out="result.name"/>
                    </div>
                </a>
            </div>
        </t>
    </t></templates>
